<div class="container">
  <div class="columns is-mobile is-centered">
    <div class="column is-half">

      <div class="field">
        <label class="label">Nombre *</label>
        <p class="control is-expanded has-icons-left">
          <input class="input" type="text" placeholder="Name" id="cust-name">
          <span class="icon is-small is-left">
            <i class="fas fa-user"></i>
          </span>
        </p>
      </div>

      <div class="field">
        <label class="label">Correo Electronico *</label>
        <p class="control is-expanded has-icons-left has-icons-right">
          <input class="input" type="email" placeholder="Email" id="cust-email">
          <span class="icon is-small is-left">
            <i class="fas fa-envelope"></i>
          </span>
          <span class="icon is-small is-right">
            <i class="fas fa-check"></i>
          </span>
        </p>
      </div>

      <div class="field">
        <label class="label">Telefono</label>
        <p class="control is-expanded has-icons-left">
          <input class="input" type="text" placeholder="telefono" id="cust-phone">
          <span class="icon is-small is-left">
            <i class="fas fa-phone"></i>
          </span>
        </p>
      </div>

      <label class="label">Monto *</label>
      <div class="field has-addons">
        <p class="control">
          <span class="select">
            <select>
              <option>$</option>
              <option>£</option>
              <option>€</option>
            </select>
          </span>
        </p>
        <p class="control is-expanded">
          <input class="input" type="text" placeholder="Monto a pagar" id="amount">
        </p>
      </div>

      <div class="field">
        <p class="control is-expanded">
          <a class="button is-danger is-fullwidth" id="customer-next">
            <strong>Continuar  </strong>
            <span class="icon is-left">
              <i class="fas fa-arrow-circle-right"></i>
            </span>
          </a>
        </p>
      </div>

    </div>
  </div>
</div>